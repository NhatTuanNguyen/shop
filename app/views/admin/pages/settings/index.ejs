<% 
	const collection="settings" ; 
	const linkPrefix=systemConfig.prefixAdmin + `/${collection}/`; 
	const folderUpload = './uploads/logo/' ;
%>

<% include ./../../elements/error %>
<% include ./../../helpers/image %>

<div class="card card-info card-outline">
	<form action="<%= linkPrefix %>save/" method="POST" enctype="multipart/form-data" class="mb-0">
		<div class="card-body">
			<div class="form-group row">
				<label for="logo" class="col-sm-2 col-form-label text-sm-right required">Logo</label>
				<div class="col-xs-12 col-sm-8">
					<input type="file" name="logo" class="form-control form-control-sm">
					<%- imgHelper(folderUpload,item.logo,'img-avatar-form') %>
				</div>
			</div>

			<div class="form-group row">
				<label for="copyright" class="col-sm-2 col-form-label text-sm-right required">Copyright</label>
				<div class="col-xs-12 col-sm-8">
					<input type="text" name="copyright" value="<%= item.copyright %>"
						class="form-control form-control-sm">
				</div>
			</div>
			<div class="form-group row">
				<label for="info" class="col-sm-2 col-form-label text-sm-right required">Info</label>
				<div class="col-xs-12 col-sm-8">
					<textarea type="text" name="info"
						class="form-control form-control-sm"><%= item.info %></textarea>
				</div>
			</div>
			<div class="form-group row">
				<label for="map" class="col-sm-2 col-form-label text-sm-right required">Map</label>
				<div class="col-xs-12 col-sm-8">
					<textarea type="text" name="map"
						class="form-control form-control-sm"><%= item.map %></textarea>
				</div>
			</div>
			<div class="form-group row">
				<label for="email" class="col-sm-2 col-form-label text-sm-right required">Email</label>
				<div class="col-xs-12 col-sm-8">
					<input type="text" name="email" value="<%= item.email %>"
						class="form-control form-control-sm">
				</div>
			</div>
			<div class="form-group row">
				<label for="facebook" class="col-sm-2 col-form-label text-sm-right required">Facebook</label>
				<div class="col-xs-12 col-sm-8">
					<input type="text" name="media[facebook]" value="<%= item.media[0].facebook %>" class="form-control form-control-sm">
				</div>
			</div>
			<div class="form-group row">
				<label for="twitter" class="col-sm-2 col-form-label text-sm-right required">Twitter</label>
				<div class="col-xs-12 col-sm-8">
					<input type="text" name="media[twitter]" value="<%= item.media[0].twitter %>" class="form-control form-control-sm">
				</div>
			</div>
			<div class="form-group row">
				<label for="youtube" class="col-sm-2 col-form-label text-sm-right required">Youtube</label>
				<div class="col-xs-12 col-sm-8">
					<input type="text" name="media[youtube]" value="<%= item.media[0].youtube %>" class="form-control form-control-sm">
				</div>
			</div>
			<div class="form-group row">
				<label for="instagram" class="col-sm-2 col-form-label text-sm-right required">Instagram</label>
				<div class="col-xs-12 col-sm-8">
					<input type="text" name="media[instagram]" value="<%= item.media[0].instagram %>" class="form-control form-control-sm">
				</div>
			</div>
			<div class="card-footer">
				<div class="col-12 col-sm-8 offset-sm-2">
				<input name="image_old" value="<%= item.logo %>" type="hidden">
					<!-- <input class="form-control" name="id" value="<%#= item.id %>" type="hidden" > -->
					<button type="submit" class="btn btn-sm btn-success mr-1"> Update</button>
					<a href="<%= linkPrefix %>" class="btn btn-sm btn-danger mr-1"> Cancel</a>
				</div>
			</div>
	</form>
</div>