
<% 
	const collection = "coupons";
	const linkPrefix = systemConfig.prefixAdmin + `/${collection}/`;
%>

<% include ./../../elements/error %>

<div class="card card-info card-outline">
	<form action="<%= linkPrefix %>save/" method="POST" class="mb-0 sm-event" >
		<div class="card-body">
		
			<div class="form-group row">
				<label for="name" class="col-sm-2 col-form-label text-sm-right required">Name</label>
				<div class="col-xs-12 col-sm-8">
					<input id="name_slug" type="text" name="name" value="<%= item.name %>" class="form-control form-control-sm">
				</div>
			</div>
			<div class="form-group row">
				<label for="status" class="col-sm-2 col-form-label text-sm-right">Status</label>
				<div class="col-xs-12 col-sm-8">
					<select name="status" class="custom-select custom-select-sm">
						<option value="novalue">Choose Status</option>
						<option value="active" <%= (item.status == "active") ? 'selected="selected"' : '' %> >Active</option>
						<option value="inactive" <%= (item.status == "inactive") ? 'selected="selected"' : '' %> >Inactive</option>
					</select>
				</div>
			</div>
			<div class="form-group row">
				<label for="amount" class="col-sm-2 col-form-label text-sm-right required">Amount</label>
				<div class="col-xs-12 col-sm-8">
					<input type="number" name="amount" value="<%= item.amount %>" class="form-control form-control-sm">
				</div>
			</div>
			<div class="form-group row">
				<label for="type" class="col-sm-2 col-form-label text-sm-right">Type</label>
				<div class="col-xs-12 col-sm-8">
					<select name="type" class="custom-select custom-select-sm">
						<option value="novalue">Choose type</option>
						<option value="percent" <%= (item.type == "percent") ? 'selected="selected"' : '' %> >Percent</option>
						<option value="price" <%= (item.type == "price") ? 'selected="selected"' : '' %> >Price</option>
					</select>
				</div>
			</div>
			<div class="form-group row">
				<label for="discount" class="col-sm-2 col-form-label text-sm-right required">Discount</label>
				<div class="col-xs-12 col-sm-8">
					<input type="number" name="discount" value="<%= item.discount %>" class="form-control form-control-sm">
				</div>
			</div>
			<div class="form-group row">
				<label for="min_price" class="col-sm-2 col-form-label text-sm-right required">Min price</label>
				<div class="col-xs-12 col-sm-8">
					<input type="number" name="min_price" value="<%= item.min_price %>" class="form-control form-control-sm">
				</div>
			</div>
			<div class="form-group row">
				<label for="starttime" class="col-sm-2 col-form-label text-sm-right required">Start time</label>
				<div class="col-xs-12 col-sm-8">
					<input type="datetime-local" name="starttime" value="<%= moment(item.starttime).format(systemConfig.formatDayTimeLocal) %>" class="form-control form-control-sm">
				</div>
			</div>
			<div class="form-group row">
				<label for="endtime" class="col-sm-2 col-form-label text-sm-right required">End time</label>
				<div class="col-xs-12 col-sm-8">
					<input type="datetime-local" name="endtime" value="<%= moment(item.endtime).format(systemConfig.formatDayTimeLocal) %>" class="form-control form-control-sm">
				</div>
			</div>
		</div>
		
		<div class="card-footer">
			<div class="col-12 col-sm-8 offset-sm-2">
				<input class="form-control" name="id" value="<%= item.id %>" type="hidden" >
				<button type="submit" class="btn btn-sm btn-success mr-1"> Submit</button>
				<a href="<%= linkPrefix %>" class="btn btn-sm btn-danger mr-1"> Cancel</a>
			</div>
		</div>
	</form>
</div>