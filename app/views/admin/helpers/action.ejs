<% 
    actionHelper = (collection,addNew = 1) => { 
        let actions = [
            { value: "", name: "Bulk Action" },
            { value: "changeStatus/active", name: "Active" },
            { value: "changeStatus/inactive", name: "InActive" },
            // { value: "changeOrdering/", name: "Change Ordering" },
            { value: "delete/", name: "Delete" },
        ];
        let htmlAddNew=''
        let xhtmlAction = '';
        let linkAddNew  = systemConfig.prefixAdmin + '/' + collection + '/form' ;

        actions.forEach((action)=> {
            let link = systemConfig.prefixAdmin + '/' + collection + '/' + action.value;
            xhtmlAction += `<option value="${link}">${action.name}</option>`;
        });
        if (addNew) {
            htmlAddNew = `<a href="${linkAddNew}" class="btn btn-sm btn-info"><i class="fas fa-plus"></i> Add New</a>`
        }
        return `<div class="d-flex flex-wrap align-items-center justify-content-between mb-2">
                    <div class="mb-1">
                        <select name="slbAction" class="slbAction custom-select custom-select-sm mr-1 " style="width: unset">
                            
                            ${xhtmlAction}
                        </select> 
                        <button id="btn-action" value="btnAction" class="btnAction btn btn-sm btn-info" disabled>Apply <span class="badge badge-pill badge-danger navbar-badge countItems" >0</span></button>
                    </div>
                    ${htmlAddNew}
                </div>`;
    } 
%>
