<% 
    formatSummary = (content,maxLenght = 150) => {
        if(content.length > maxLenght + 4){
            return content.replace(/(<([^>]+)>)/igm,"").substring(0,maxLenght) + ' ...';
        } else {
            return content.replace(/(<([^>]+)>)/igm,"").substring(0,maxLenght);
        }
    }
%> 