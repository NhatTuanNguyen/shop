<!-- Page Title
		============================================= -->
<section id="page-title">

  <div class="container clearfix">
    <h1>My Account</h1>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="#">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page">Login</li>
    </ol>
  </div>
</section><!-- #page-title end -->

<!-- Content
		============================================= -->
<section id="content">
  <div class="content-wrap">
    <div class="container clearfix">

      <div class="tabs mx-auto mb-0 clearfix" id="tab-login-register" style="max-width: 500px;">

        <ul class="tab-nav tab-nav2 center clearfix">
          <li class="inline-block"><a href="#tab-login">Login</a></li>
          <li class="inline-block"><a href="#tab-register">Register</a></li>
        </ul>

        <div class="tab-container">

          <div class="tab-content" id="tab-login">
            <div class="card mb-0">
              <div class="card-body" style="padding: 40px;">
                <form id="login-form" name="login-form" class="mb-0" action="/auth/login" method="post">

                  <h3>Login to your Account</h3>
                  <% include ./../../elements/error %>
                  <%- locals.flash %>
                  <div class="row">
                    <div class="col-12 form-group">
                      <label for="email">Email:</label>
                      <input type="email" id="email" name="email" value="<%= item.email %>"
                        class="form-control" />
                    </div>

                    <div class="col-12 form-group">
                      <label for="password">Password:</label>
                      <input type="password" id="password" name="password" value="<%= item.password %>"
                        class="form-control" />
                    </div>

                    <div class="col-12 form-group">
                      <button class="button button-3d button-black m-0">Login</button>
                      <a href="#" class="float-end">Forgot Password?</a>
                    </div>
                  </div>
                </form>
                <div class="line line-sm"></div>
									<div class="center">
										<h4 style="margin-bottom: 15px;">or Login with:</h4>
										<a href="#" class="button button-rounded si-facebook si-colored">Facebook</a>
										<span class="d-none d-md-inline-block">or</span>
										<a href="#" class="button button-rounded si-twitter si-colored">Twitter</a>
									</div>
              </div>
            </div>
          </div>

          <div class="tab-content" id="tab-register">
            <div class="card mb-0">
              <div class="card-body" style="padding: 40px;">
                <h3>Register for an Account</h3>

                <form class="row mb-0" action="/auth/signup" method="post">
                  <div class="col-12 form-group">
                    <label for="name">Name:</label>
                    <input type="text" name="name" value=""
                      required class="form-control" />
                  </div>

                  <div class="col-12 form-group">
                    <label for="email">Email Address:</label>
                    <input type="email" name="email" value=""
                      required class="form-control" />
                  </div>

                  <div class="col-12 form-group">
                    <label for="phone">Phone:</label>
                    <input type="text" name="phone" value=""
                      required class="form-control" />
                  </div>

                  <div class="col-12 form-group">
                    <label for="password">Choose Password:</label>
                    <input type="password" id="register-password" name="password" value=""
                      required class="form-control" />
                  </div>

                  <div class="col-12 form-group">
                    <label for="repassword">Re-enter Password:</label>
                    <input type="password" id="repassword" value=""
                      required class="form-control" />
                  </div>

                  <div class="col-12 form-group">
                    <button class="button button-3d button-black m-0">Register Now</button>
                  </div>

                </form>
              </div>
            </div>
          </div>

        </div>

      </div>

    </div>
  </div>
</section><!-- #content end -->