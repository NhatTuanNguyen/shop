<!-- Page Title
		============================================= -->
<section id="page-title">
	<div class="container">
		<h1>Checkout</h1>
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a href="/">Home</a></li>
			<li class="breadcrumb-item active" aria-current="page">Checkout</li>
		</ol>
	</div>
</section><!-- #page-title end -->

<!-- Content
		============================================= -->
<section id="content">
	<div class="content-wrap">
		<div class="container clearfix">
			<div class="row col-mb-50 gutter-50">
				<form id="checkout-form" name="shipping-form" class="row mb-0" action="/cart/order" method="post">
					<div class="col-lg-7">
						<h3>Shipment Details</h3>
						<div class="row mb-0">
							<div class="col-md-6 form-group">
								<input required type="text" id="shipping-form-name" name="name" value="<%= userInfo.name %>"
									placeholder="Name" class="sm-form-control" />
							</div>

							<div class="col-md-6 form-group">
								<input required type="text" id="shipping-form-phone" name="phone" value="<%= userInfo.phone %>"
									placeholder="Phone" class="sm-form-control" />
							</div>
							<div class="col-12 form-group">
								<input required type="email" id="shipping-form-email" name="email" value="<%= userInfo.email %>"
									placeholder="Email" class="sm-form-control" />
							</div>
							<div class="col-md-4 form-group">
								<select data-value="<%= userInfo.city %>" name="city" class="sm-form-control " required >
									<option value="">Choose City</option>
								  </select>
							</div>
							<div class="col-md-4 form-group">
								<select data-value="<%= userInfo.district %>" name="district" class="sm-form-control " required >
									<option value="">Choose District</option>
								  </select>
							</div>
							<div class="col-md-4 form-group">
								<select data-value="<%= userInfo.ward %>" name="ward" class="sm-form-control " required >
									<option value="">Choose Ward</option>
								  </select>
							</div>
							<div class="col-12 form-group">
								<input required type="text" id="shipping-form-address" name="address" value="<%= userInfo.address %>"
									placeholder="Address" class="sm-form-control" />
							</div>

							<div class="col-12 form-group">
								<textarea class="sm-form-control" id="shipping-form-message"
									name="notes" placeholder="Notes" rows="6" cols="30"></textarea>
							</div>

						</div>
					</div>
					<div class="col-lg-5">
						<h3>Cart Totals</h3>
						<div class="table-responsive">
							<table class="table cart checkout">
								<tbody>
									<tr class="cart_item">
										<td class="border-top-0 cart-product-name">
											<strong>Cart Subtotal</strong>
										</td>

										<td class="border-top-0 cart-product-name subtotal">
											<span class="amount"></span>
										</td>
									</tr>
									<tr class="cart_item">
										<td class="cart-product-name">
											<strong>Shipping</strong>
										</td>

										<td class="cart-product-name shipping">
											<span class="amount">$0</span>
											<input type="hidden" name="ship_price" value=0>
										</td>
									</tr>
									<tr class="cart_item discount" style="display:none;">
										<td class="cart-product-name">
											<strong>Discount</strong>
										</td>

										<td class="cart-product-name">
											<span class="amount" style="color:red">-$0</span>
											<input type="hidden" name="discount" value=0>
										</td>
									</tr>
									<tr class="cart_item">
										<td class="cart-product-name">
											<strong>Total</strong>
										</td>

										<td class="cart-product-name">
											<span class="amount color lead"><strong></strong></span>
										</td>
									</tr>
								</tbody>
							</table>
						</div>
						<div class="row">
							<div class="col-md-8">
								<input type="text" value="" class="sm-form-control text-center text-md-start"
									placeholder="Enter Coupon Code.." />
									<input type="hidden" name="coupon" value="">
								<p class="mb-0 text-center notify" style="display:none;"></p>
							</div>
							<div class="col-md-4 mt-3 mt-md-0">
								<a href="/cart/coupon"
									class="button button-3d button-black m-0 float-end apply-coupon">Apply Coupon</a>
							</div>

						</div>
						<div class="border border-dark mt-3 p-2 px-3">
							<div class="form-check">
								<input class="form-check-input" type="radio" name="ship" value="Payment on delivery"
									id="paymentOnDelivery" checked>
								<label class="form-check-label" for="paymentOnDelivery">
									Payment on delivery
								</label>
							</div>
							<div class="form-check">
								<input class="form-check-input" type="radio" name="ship" value="Credit card" disabled
									id="creditCard" >
								<label class="form-check-label" for="creditCard">
									Credit card
								</label>
							</div>
						</div>
						<input type="hidden" name="products">
						<input type="hidden" name="user_id" value="<%= userInfo.id %>">
						<button type="submit" class="button button-3d float-end m-0 mt-3 order">Place Order</button>
					</div>
				</form>
				<div class="w-100"></div>
				<div class="col-lg-12">
					<h4 class="mb-0">Your Orders</h4>
					<div class="table-responsive">
						<table class="table cart checkout">
							<thead>
								<tr>
									<th class="cart-product-thumbnail">&nbsp;</th>
									<th class="cart-product-name">Product</th>
									<th class="cart-product-quantity">Quantity</th>
									<th class="cart-product-subtotal">Total</th>
								</tr>
							</thead>
							<tbody>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</section><!-- #content end -->